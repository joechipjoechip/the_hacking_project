<% @articles.each do |article| %>
  <hr>
    <h2><%= article.title %></h2>
    <p><%= article.text %></p>
    <p><%= link_to article_path(article), article_path(article) %></p>
    <p><%= link_to 'Edit', edit_article_path(article) %></p>
    <p><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></p>
  <hr>
<% end %>


