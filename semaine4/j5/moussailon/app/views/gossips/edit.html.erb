<h2>Edit this gossip !</h2>

<div style="max-width: 550px; margin:0 auto;">
  <%= form_for @gossip do |f| %>

    <div class="form-group">
      <label>Body :</label>
      <%= f.text_area :body, class:"form-control text-center" %>
    </div>

  
    <div class="form-group">
      <label></label>
      <%= f.submit "Ok !", class:"btn btn-outline-success" %>
    </div>

  <% end %>

  <%= link_to "Supprimer cette rumeur", gossip_path(@gossip.id), method: "delete", class: "btn btn-danger" %>


</div>