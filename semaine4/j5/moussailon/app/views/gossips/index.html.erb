<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    
    <% @allGoss.each do |goss| %>
      <div style="border: solid 1px rgba(0,0,0,0.2); margin-bottom:40px; border-radius: 20px; padding: 20px 0;">
        <h2 style="color:orange;">" <%= goss.body %> "</h2>

        <p class="font-italic" style="color: grey;">
          <span style="font-size:10px;">
            from
          </span> <%= @allMous.find_by(id:goss.mousaillon_id).username %> 
          <span style="font-size:10px;">
            at <%= goss.created_at %>
          </span>
        </p>

        <%= render :partial => 'partials/comments', :locals => {:goss => goss}%>
          
        <div class="row">
          <div class="col-lg-3"></div>
          <div class="col-lg-6">
            <hr>
            <%= link_to "Voir", gossip_path(goss.id), class: "btn btn-outline-primary" %>
            <%= link_to "Editer", edit_gossip_path(goss.id), class: "btn btn-outline-warning" %>
            <%= link_to "Supprimer", gossip_path(goss.id), class: "btn btn-outline-danger", method: "delete" %>
            <hr>
          </div>
          <div class="col-lg-3"></div>
        </div>
      </div>
    <% end %>
    
  </div>
  <div class="col-lg-2"></div>
</div>

