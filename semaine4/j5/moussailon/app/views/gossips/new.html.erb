<h2>Create a new Gossip !</h2>
<h4>which will be sign by <%= @this_mousaillon.username %></h4>
<div style="max-width: 550px; margin:0 auto;">
  <%= form_for @new_gossip do |f| %>
    
    <%= hidden_field_tag('mous_key', @this_mousaillon.id) %>
    <div class="form-group">
      <label>Body :</label>
      <%= f.text_area :body, class:"form-control text-center" %>
    </div>

    <div class="form-group">
      <label></label>
      <%= f.submit "Publish dat !", class:"btn btn-outline-success" %>
    </div>

  <% end %>
</div>