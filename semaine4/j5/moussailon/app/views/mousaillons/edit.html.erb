<h2>Edit this one !</h2>

<div style="max-width: 550px; margin:0 auto;">
  <%= form_for @mousaillon do |f| %>

    <div class="form-group">
      <label>User name :</label>
      <%= f.text_field :username, class:"form-control text-center" %>
    </div>

    <div class="form-group">
      <label>Email :</label>
      <%= f.text_field :email, class:"form-control text-center" %>
    </div>

    <div class="form-group">
      <label>Bio :</label>
      <%= f.text_area :bio, class:"form-control text-center" %>
    </div>

    <div class="form-group">
      <label></label>
      <%= f.submit "Ok !", class:"btn btn-outline-success" %>
    </div>

  <% end %>

  <a href="<%= mousaillon_path(@mousaillon.id) %>" class="btn btn-outline-danger" data-confirm="sure ?" data-method="DELETE">Delete this mousaillon</a>
</div>